// tsconfig for electron main process
{
  "extends": "./node_modules/electron-webpack/tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": true,

    "declaration": false,
    "downlevelIteration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],

    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/**/*.*"
  ],
  // "include": [
  //   "src/**/*.ts",
  // ]
}
