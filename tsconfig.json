// tsconfig for electron main process
{
  "extends": "./node_modules/electron-webpack/tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "Main/*": [ "src/main/*" ],
      "App/*": [ "ng-src/app/*" ],
      "Lib/*": [ "lib/*" ],
    },
    "allowJs": true,
    "checkJs": true,

    "declaration": false,
    "downlevelIteration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],

    // Other rules for Electron

    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules/**/*.*"
  ],
  "include": [
    "src/**/*.ts",
  ]
}
