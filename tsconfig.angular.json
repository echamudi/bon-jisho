// tsconfig for angular
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "Main/*": [ "src/main/*" ],
      "App/*": [ "ng-src/app/*" ],
      "Lib/*": [ "lib/*" ],
    },
    "allowJs": true,
    "checkJs": true,

    "declaration": false,
    "downlevelIteration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],

    // Other rules for angular

    "outDir": "./out-tsc",

    "target": "es2015",
    "module": "amd",
    "moduleResolution": "node",

    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "newLine": "lf",
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "exclude": [
    "node_modules/**/*.*"
  ],
  "include": [
    "ng-src/**/*.*"
  ]
}
